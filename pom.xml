<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>io.github.awidesky</groupId>
	<artifactId>YoutubeAudioAutoDownloader</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>YoutubeAudioAutoDownloader</name>
	<description>Downloads audio/video from Youtube by automaticly get link from
		your clipboard.</description>
	<url>https://github.com/awidesky/YoutubeAudioAutoDownloader</url>
	<licenses>
		<license>
			<name>MIT License</name>
			<url>http://www.opensource.org/licenses/mit-license.php</url>
		</license>
	</licenses>
	<developers>
		<developer>
			<name>Eugene Hong</name>
			<email>awidesky@naver.com</email>
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>io.github.awidesky</groupId>
			<artifactId>GUIUtil</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version>
				<configuration>
					<release>17</release>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.github.akman</groupId>
				<artifactId>jpackage-maven-plugin</artifactId>
				<version>0.1.5</version>
				<executions>
					<execution>
						<goals>
							<goal>jpackage</goal>
						</goals>
						<phase>verify</phase>
					</execution>
				</executions>
				<configuration>
					<input>${project.build.directory}</input>
					<dest>${project.build.directory}/jpackage</dest>
					<mainjar>YoutubeAudioAutoDownloader-${project.versions}.jar</mainjar>
					<mainclass>com.awidesky.YoutubeClipboardAutoDownloader.Main</mainclass>
					<name>YoutubeAudioAutoDownloader</name>
					<vendor>Eugene Hong</vendor>
					<icon>${project.basedir}/YoutubeAudioAutoDownloader-resources/icon.ico</icon>
					<appversion>${project.version}</appversion>
					<licensefile>${project.basedir}/LICENSE</licensefile>
					<copyright>Copyright (c) 2020-2023 Eugene Hong. All Rights Reserved.</copyright>
					<windirchooser />
					<winmenu />
					<winshortcut />
					<!-- right jpackage.opt should be like :
					# jpackage
					-dest 'C:/Users/Eugene Hong/Documents/develop/git repos/Youtube-Audio-Auto-Downloader4J/target/jpackage'
					-app-version '0.0.1'
					-copyright 'Copyright (c) 2020-2023 Eugene Hong. All Rights Reserved.'
					-name 'YoutubeAudioAutoDownloader'
					-vendor 'Eugene Hong'
					-icon 'C:/Users/Eugene Hong/Documents/develop/git repos/Youtube-Audio-Auto-Downloader4J/YoutubeAudioAutoDownloader-resources/icon.ico'
					-input 'C:/Users/Eugene Hong/Documents/develop/git repos/Youtube-Audio-Auto-Downloader4J/target'
					-main-jar 'YoutubeAudioAutoDownloader-0.0.1-SNAPSHOT.jar'
					-main-class com.awidesky.YoutubeClipboardAutoDownloader.Main
					-license-file 'C:/Users/Eugene Hong/Documents/develop/git repos/Youtube-Audio-Auto-Downloader4J/LICENSE'
					-->
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>