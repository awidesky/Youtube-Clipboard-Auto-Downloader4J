<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>io.github.awidesky</groupId>
	<artifactId>YoutubeAudioAutoDownloader</artifactId>
	<version>2.0.0</version>
	<name>YoutubeAudioAutoDownloader</name>
	<description>Downloads audio/video from Youtube by automaticly get link from
		your clipboard.</description>
	<url>https://github.com/awidesky/YoutubeAudioAutoDownloader</url>
	<licenses>
		<license>
			<name>MIT License</name>
			<url>http://www.opensource.org/licenses/mit-license.php</url>
		</license>
	</licenses>
	<developers>
		<developer>
			<name>Eugene Hong</name>
			<email>awidesky@naver.com</email>
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>io.github.awidesky</groupId>
			<artifactId>GUIUtil</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>platform-windows</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.panteleyev</groupId>
						<artifactId>jpackage-maven-plugin</artifactId>
						<version>1.4.0</version>
						<configuration>
							<winMenu>true</winMenu>
							<winShortcut>true</winShortcut>
							<winDirChooser>true</winDirChooser>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
	
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.panteleyev</groupId>
				<artifactId>jpackage-maven-plugin</artifactId>
				<version>1.4.0</version>

				<configuration>
					<input>${project.build.directory}</input>
					<destination>${project.build.directory}/jpackage</destination>
					<mainJar>YoutubeAudioAutoDownloader-${project.version}.jar</mainJar>
					<mainClass>com.awidesky.YoutubeClipboardAutoDownloader.Main</mainClass>
					<name>YoutubeAudioAutoDownloader</name>
					<vendor>Eugene Hong</vendor>
					<icon>${project.basedir}/YoutubeAudioAutoDownloader-resources/icon.ico</icon>
					<appVersion>${project.version}</appVersion>
					<licenseFile>${project.basedir}/LICENSE</licenseFile>
					<copyright>Copyright (c) 2020-2023 Eugene Hong. All Rights Reserved.</copyright>
				</configuration>

				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jpackage</goal>
						</goals>
					</execution>
					<execution>
						<id>win</id>
						<configuration>
							<winMenu>true</winMenu>
							<winShortcut>true</winShortcut>
							<winDirChooser>true</winDirChooser>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<source>17</source>
					<target>17</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>